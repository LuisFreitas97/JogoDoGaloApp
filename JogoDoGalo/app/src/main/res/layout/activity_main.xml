<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.example.luis.jogodogalo.MainActivity">

    <LinearLayout
        android:id="@+id/primeiraFila"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:onClick="main"
            android:tag="1" />

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:onClick="main"
            android:tag="2"/>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#000000"
            android:onClick="main"
            android:tag="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#ffffff">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/segundaFila"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="4"/>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="5"/>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="6"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#ffffff">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/terceiraFila"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="7"/>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="8"/>

        <LinearLayout
            android:layout_width="12dp"
            android:layout_height="match_parent"
            android:background="#ffffff">
        </LinearLayout>

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#000000"
        android:onClick="main"
        android:tag="9" />

    </LinearLayout>
</LinearLayout>
